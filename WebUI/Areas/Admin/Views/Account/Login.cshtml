
@{
    ViewData["Title"] = "Login";
    Layout = "~/Pages/Shared/_Login.cshtml";
}

@if (ViewBag.LoginError != null)
{
    <div class="alert alert-danger">
        @ViewBag.LoginError
    </div>
}

<div class="login-box-body">
    <h3 class="login-box-msg">Giriş Yap</h3>
    <form action="/Admin/Account/Login" method="post">
        <div class="form-group has-feedback">
            <input type="text" class="form-control sty1" name="user" placeholder="Kullanıcı Adı">
        </div>
        <div class="form-group has-feedback">
            <input type="password" class="form-control sty1" name="pass" placeholder="Şifre">
        </div>
        <div>
            <div class="col-xs-8">
                <div class="checkbox icheck">
                    <label>
                        <input type="checkbox">
                        Beni Hatırla
                    </label>
                    <a href="#" class="pull-right"><i class="fa fa-lock"></i> Şifremi unuttum?</a>
                </div>
            </div>
            <!-- /.col -->
            <div class="col-xs-4 m-t-1">
                <input type="submit" value="Giriş Yap" class="btn btn-primary btn-block btn-flat" />
            </div>
            <!-- /.col -->
        </div>
    </form>
    <!-- /.social-auth-links -->
</div>

