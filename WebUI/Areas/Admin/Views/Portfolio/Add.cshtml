@model Portfolio
@{
    ViewData["Title"] = "Add";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="content-header sty-one">
    <h1>Yeni Referans Ekle</h1>
    <ol class="breadcrumb">
        <li><a href="/Admin/Index/">Anasayfa</a></li>
        <li><i class="fa fa-angle-right"></i> Yeni Referans Ekle &nbsp;</li>
    </ol>
</div>
<div class="content">
    <div class="row">
        <div class="col-lg-12">
            @if (ViewBag.CreateError is not null)
            {
                <div class="alert alert-danger">@ViewBag.CreateError</div>
            }
            <div class="card card-outline">

                <div class="card-header bg-blue">
                    <a href="/Admin/Portfolio/Index" class="btn btn-light float-right">Geri</a>
                    <h4 class="text-white mt-2">Referans Ekle</h4>
                </div>
                <div class="card-body">
                    <form action="/Admin/Portfolio/Add" method="post">
                        <input type="hidden" value="@DateTime.Now" name="CreatedAt" />
                        <div class="form-group">
                            <label>Referans Adı</label>
                            <input type="text" class="form-control" name="Title" placeholder="Referans Adı">
                        </div>
                        <div class="form-group">
                            <label>Referans Görseli</label>
                            <input type="text" class="form-control" name="ImageUrl" placeholder="Görsel linki...">
                        </div>
                        <div class="form-group">
                            <label>Proje Linki</label>
                            <input type="text" class="form-control" name="ProjectUrl" placeholder="Proje linki...">
                        </div>
                        <div class="form-group">
                            <label>Kategori</label>
                            <select class="form-control" name="CategoryId">
                                <option value="">Seçim Yapınız..!</option>
                                @if (ViewBag.CategoryList != null)
                                {
                                    foreach (var item in ViewBag.CategoryList)
                                    {
                                        <option value="@item.ID">@item.Name</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Açıklama</label>
                            <textarea class="form-control" name="Description" placeholder="Açıklama"></textarea>
                        </div>
                        <input type="submit" value="Ekle" class="btn btn-success" />
                    </form>
                </div>
                </div>
            </div>
        </div>
    </div>
</div>


