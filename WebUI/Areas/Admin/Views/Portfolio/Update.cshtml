@model Portfolio
@{
    ViewData["Title"] = "Update";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="content-header sty-one">
    <h1>"<b>@Model.Title</b>" Güncelle</h1>
    <ol class="breadcrumb">
        <li><a href="/Admin/Index/">Anasayfa</a></li>
        <li><i class="fa fa-angle-right"></i> Referans Düzenle &nbsp;</li>
    </ol>
</div>
<div class="content">
    <div class="row">
        <div class="col-lg-12">
            <div class="card card-outline">
                <div class="card-header bg-blue">
                    <a href="/Admin/Portfolio/Index" class="btn btn-light float-right">Geri</a>
                    <h4 class="text-white mt-2">Referans Düzenle</h4>

                </div>
                <div class="card-body">
                    <form action="/Admin/Portfolio/Update" method="post">
                        <input type="hidden" name="ID" value="@Model.ID" />
                        <div class="form-group">
                            <label>Yetenek Adı</label>
                            <input type="text" class="form-control" name="Title" value="@Model.Title">
                        </div>
                        <div class="form-group">
                            <label>Site Linki</label>
                            <input type="text" class="form-control" name="ProjectUrl" value="@Model.ProjectUrl">
                        </div>
                        <div class="form-group">
                            <label>Site Linki</label>
                            <textarea type="text" class="form-control" name="Description">@Model.Description</textarea>
                        </div>
                        <div class="form-group">
                            <br /><img class="img-fluid h-25 w-25" src="@Model.ImageUrl" /> <br /><br />
                            <label>Görsel</label>
                            <input type="text" class="form-control" name="ImageUrl" value="@Model.ImageUrl">
                        </div>
                        <div class="form-group">
                            <label>Kategori</label>
                            <select class="form-control" name="CategoryId">
                                <option value="">Seçim Yapınız..!</option>
                                @if (ViewBag.CategoryList != null)
                                {
                                    foreach (var item in ViewBag.CategoryList)
                                    {
                                        <option value="@item.ID">@item.Name</option>
                                    }
                                }
                            </select>
                        </div>
                        <input type="submit" value="Güncelle" class="btn btn-success" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

