@model Category
@{
    ViewData["Title"] = "Add";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<div class="content-header sty-one">
    <h1>Yeni Kategori Ekle</h1>
    <ol class="breadcrumb">
        <li><a href="/Admin/Index/">Anasayfa</a></li>
        <li><i class="fa fa-angle-right"></i> Yeni Kategori Ekle &nbsp;</li>
    </ol>
</div>

<div class="content">
<div class="row">
<div class="col-lg-12">
    <div class="card card-outline">
        <div class="card-header bg-blue">
                    <a href="/Admin/Category/Index" class="btn btn-light float-right">Geri</a>
            <h4 class="text-white mt-2">Kategori Ekle</h4>
        </div>
        <div class="card-body">
            <form action="/Admin/Category/Add" method="post">
                <div class="form-group">
                    <label>Kategori Adı</label>
                    <input type="text" class="form-control" name="Name" placeholder="Kategori Adı">
                </div>
                <div class="form-group">
                    <label>Açıklama</label>
                    <textarea class="form-control" name="Description" placeholder="Açıklama"></textarea>
                </div>
                        <input type="submit" value="Kategori Ekle" class="btn btn-success" />
            </form>
        </div>
    </div>
</div>
</div>
</div>

