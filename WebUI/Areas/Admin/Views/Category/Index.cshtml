@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<div class="content-header sty-one">
    <h1>Kategoriler</h1>
    <ol class="breadcrumb">
        <li><a href="/Admin/Index/">Anasayfa</a></li>
        <li><i class="fa fa-angle-right"></i> Kategoriler</li>
    </ol>
</div>
<div class="content">   
    <div class="card">        
        <div class="card-body">            
            <a href="/Admin/Category/Add" class="btn btn-success float-right">Yeni Kategori</a>
            @if (Model.Count() > 0)
{
                <div class="table-responsive">
                <div id="example2_wrapper" class="dataTables_wrapper dt-bootstrap">
                    <div class="row"><div class="col-sm-6"></div><div class="col-sm-6"></div></div><div class="row">
                        <div class="col-sm-12">
                            <table id="example2" class="table table-bordered table-hover dataTable" data-name="cool-table" role="grid" aria-describedby="example2_info">
                                                              <thead>
                                    <tr role="row">
                                        <th class="sorting_asc" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-sort="ascending">ID</th>
                                        <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-sort="ascending">Kategori Adı</th>
                                        <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" >Açıklama</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr role="row" class="odd">
                                            <td class="sorting_1">@item.ID</td>
                                            <td><a class="font-weight-bold" href="/Admin/Category/Update/@item.ID">@item.Name</a></td>
                                            <td>@item.Description</td>
                                            <td>
                                                <a href="/Admin/Category/Delete/@item.ID"><i class="fa-solid fa-trash"></i></a> &nbsp;
                                                <a href="/Admin/Category/Update/@item.ID"><i class="fa-solid fa-pen-to-square"></i></a>

                                            </td>
                                        </tr>
                                    }
                                   
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th rowspan="1" colspan="1">ID</th>
                                        <th rowspan="1" colspan="1">Kategori Adı</th>
                                        <th rowspan="1" colspan="1">Açıklama</th>
                                        <th rowspan="1" colspan="1">İşlemler</th></tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
                </div>
            }
                else
                {
                    <br />
                    <br />
                    <br />
                    <div class="alert alert-danger">
                        Ürün Bulunamadı..!
                    </div>
                }
        </div>
    </div>
</div>