@model UserSkill
@{
    ViewData["Title"] = "Add";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<div class="content-header sty-one">
    <h1>Yeni Yetenek Ekle</h1>
    <ol class="breadcrumb">
        <li><a href="/Admin/Index/">Anasayfa</a></li>
        <li><i class="fa fa-angle-right"></i> Yeni Yetenek Ekle &nbsp;</li>
    </ol>
</div>
<div class="content">
    <div class="row">
        <div class="col-lg-12">
            @if (ViewBag.CreateError is not null)
            {
                <div class="alert alert-danger">@ViewBag.CreateError</div>
            }
            <div class="card card-outline">

                <div class="card-header bg-blue">
                    <a href="/Admin/UserSkill/Index" class="btn btn-light float-right">Geri</a>
                    <h4 class="text-white mt-2">Yetenek Ekle</h4>
                </div>
                <div class="card-body">
                    <form action="/Admin/UserSkill/Add" method="post">
                        <input type="hidden" value="@DateTime.Now" name="CreatedAt" />
                        <div class="form-group">
                            <label>Yetenek Adı</label>
                            <input type="text" class="form-control" name="skill_name" placeholder="Yetenek Adı">
                        </div>
                        <div class="form-group">
                            <label>Yetenek Puanı</label>
                            <input type="number" class="form-control" name="skill_point" placeholder="Yetenek Puanı">
                        </div>
                
                <input type="submit" value="Ekle" class="btn btn-success" />
                </form>
                </div>
            </div>
        </div>
    </div>
</div>
</div>

