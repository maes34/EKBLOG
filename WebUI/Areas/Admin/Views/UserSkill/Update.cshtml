@model UserSkill
@{
    ViewData["Title"] = "Update";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="content-header sty-one">
    <h1>"<b>@Model.skill_name</b>" Güncelle</h1>
    <ol class="breadcrumb">
        <li><a href="/Admin/Index/">Anasayfa</a></li>
        <li><i class="fa fa-angle-right"></i> Yetenek Düzenle &nbsp;</li>
    </ol>
</div>
<div class="content">
    <div class="row">
        <div class="col-lg-12">
            <div class="card card-outline">
                <div class="card-header bg-blue">
                    <a href="/Admin/UserSkill/Index" class="btn btn-light float-right">Geri</a>
                    <h4 class="text-white mt-2">Yetenek Düzenle</h4>

                </div>
                <div class="card-body">
                    <form action="/Admin/UserSkill/Update" method="post">
                        <input type="hidden" name="ID" value="@Model.ID" />
                        <div class="form-group">
                            <label>Yetenek Adı</label>
                            <input type="text" class="form-control" name="skill_name" value="@Model.skill_name">
                        </div>
                        <div class="form-group">
                            <label>Yetenek Puanı</label>
                            <input type="number" class="form-control" name="skill_point" value="@Model.skill_point">
                        </div>
                        <input type="submit" value="Güncelle" class="btn btn-success" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

