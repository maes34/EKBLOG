@model IEnumerable<User>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<div class="content-header sty-one">
    <h1>Kullanıcılar</h1>
    <ol class="breadcrumb">
        <li><a href="/Admin/Index/">Anasayfa</a></li>
        <li><i class="fa fa-angle-right"></i> Kullanıcılar</li>
    </ol>
</div>
<div class="content">
    <div class="card">
        <div class="card-body">
            <!--<a href="/Admin/User/Add" class="btn btn-success float-right" disable>Yeni Kullanıcı Ekle</a>-->
            <div class="table-responsive">
                <div id="example2_wrapper" class="dataTables_wrapper dt-bootstrap">
                    <div class="row"><div class="col-sm-6"></div><div class="col-sm-6"></div></div><div class="row">
                        <div class="col-sm-12">
                            <table id="example2" class="table table-bordered table-hover dataTable" data-name="cool-table" role="grid" aria-describedby="example2_info">
                                <thead>
                                    <tr role="row">
                                        <th class="sorting_asc" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-sort="ascending">ID</th>
                                        <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-sort="ascending">İsim Soyisim</th>
                                        <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1">Kullanıcı Adı</th>
                                        <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1">Parola</th>
                                        <!--th>İşlemler</th-->
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr role="row" class="odd">
                                            <td class="sorting_1">@item.ID</td>
                                            <td>@item.Name @item.Surname</td>
                                            <td>@item.UserName</td>
                                            <td>
                                                <span class="password-mask" id="pw-@item.ID">••••••••</span>
                                                <button type="button" class="btn btn-sm btn-secondary" onclick="togglePassword(@item.ID, '@item.Password')"><i class="fa-solid fa-eye"></i></button>
                                            </td>
                                            <!--td>
                                                <a href="/Admin/User/Delete/idekle"><i class="fa-solid fa-trash"></i></a> &nbsp;
                                                <a href="/Admin/User/Update/idekle"><i class="fa-solid fa-pen-to-square"></i></a>

                                            <td-->
                                        </tr>
                                    }

                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th rowspan="1" colspan="1">ID</th>
                                        <th rowspan="1" colspan="1">İsim Soyisim</th>
                                        <th rowspan="1" colspan="1">Kullanıcı Adı</th>
                                        <th rowspan="1" colspan="1">Parola</th>
                                        <!--th rowspan="1" colspan="1">İşlemler<th-->
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


