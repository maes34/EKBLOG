@using WebUI.Views.ViewModel
@model AboutViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Template.cshtml";
}

<div class="clearFix">&nbsp;</div>
<div class="container h-100">
    <div class="row">
        <div class="col-md-6">
            <img class="img-fluid" src="@Model.About.PhotoUrl">
        </div>
        <div class="col-md-6">
            <h4>İletişim Bilgileri</h4>
            <p>@Model.About.Description</p>
            <div class="clearFix">&nbsp;</div>
            <h4>Yetenekler</h4>
            @foreach (var item in Model.UserSkills)
            {
                <div class="mb-2">
                    <strong>@item.skill_name</strong>
                    <div class="progress mb-1" role="progressbar" aria-label="@item.skill_name" aria-valuenow="@item.skill_point" aria-valuemin="0" aria-valuemax="100">
                        <div class="progress-bar progress-bar-striped progress-bar-animated bg-info" style="width: @item.skill_point%">
                            @item.skill_point%
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<div class="clearFix">&nbsp;</div>

