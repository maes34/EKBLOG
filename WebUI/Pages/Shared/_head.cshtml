@using Core.Service
@using Model.Entities
@inject ICoreService<SiteSetting> _sdb

@{
    var siteSettings = _sdb.GetAll().FirstOrDefault();
    string SiteTitle = siteSettings.SiteTitle;
    string logoUrl = siteSettings?.SiteLogoUrl ?? "/images/default-logo.png";
    string favIcon = siteSettings.SiteFavionUrl;
    string cvUrl = siteSettings.CvUrl;
    string facebookUrl = siteSettings.FacebookUrl;
    string xUrl = siteSettings.XUrl;
    string InstagramUrl = siteSettings.InstagramUrl;
    string LinkedinUrl = siteSettings.LinkedinUrl;
    string GithubUrl = siteSettings.GithubUrl;

    string controller = ViewContext.RouteData.Values["controller"]?.ToString();
    string action = ViewContext.RouteData.Values["action"]?.ToString();
    string pageTitle = "";

    switch (controller)
    {
        
        case "Home":
            pageTitle = "Anasayfa";
            break;
        case "Contact":
            pageTitle = "İletişim";
            break;
        case "About":
            pageTitle = "Hakkımızda";
            break;
        case "Portfolio":
            pageTitle = "Portföy";
            break;
        case "Blog":
            pageTitle = "Blog";
            break;
        default:
            pageTitle = controller;
            break;
    }
}
